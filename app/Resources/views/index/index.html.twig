                <span class="article">En stock !</span>
                <button style="display: none;position: absolute;top: 189px;right: 61px;z-index: 7777;" type="button" class="btn btn-secondary description-rapide" data-toggle="modal" data-target="#flipFlop{{ met.id }}">Voir description</button>

                <button onclick="window.location.href='{{ path("revue",{'idMet': met.id }) }}'" style="display: none;position: absolute;top: 232px;right: 61px;z-index: 7777;width:145px;" type="submit" class="btn btn-secondary description-rapide" id="revue{{ met.id }}" >Voir la revue </button>

               <blink class="reduction blink_me">-20% </blink>
                <button class="commander {% if met.id in panierArray|keys %}deja-clique{% endif %}" id="Button{{ met.id}}">{% if met.id not in panierArray|keys %}<span>Ajouter au panier</span>{% else %}<i class="fa fa-times fa-w-11 fa-spin fa-lg"></i> Retirez l'article!{% endif %}</i></button>
                <input name="{{'met'~met.id}}" type="hidden" value="{{ met.id}}" data-qte="0" />
                <input type="hidden"  name="{{'dejaClique'~met.id}}" id="{{'dejaClique'~met.id}}" value="{% if met.id not in panierArray|keys %}0{% else %}1{% endif %}"/>
                <!--<a href="#"><img class="card-img-top" src="{{ vich_uploader_asset(met, 'imageFile') }}" alt=""></a>-->
               <a href="#"><img class="card-img-top"  src="{{ asset('build/products/' ~ met.imageUrl ) }}" width="252" height="143" alt="" style="object-fit: contain;">

                   <div class="card-body animated slideInLeft" style="animation-delay: 1s;" >
                     <h4 class="card-title">
                         <a href="#">{{ met.libelle }}</a>
                     </h4>
                     <h5 >{{ met.prix~' FCFA' }}</span></h5>
                     <p class="card-text">{{ met.description }}</p>
                 </div>

                <div class="card-footer" style="background: #343A40;">
                    <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                </div>

                   <div class="overlay" {% if met.id in panierArray|keys %} style="display: block;" {% endif %} style="display:none;">
                       <img  src="{{ asset('build/products/logoBAE.jpg') }}" alt="">
                   </div>
            </div>

        </div><br><br>

        <!-- The modal -->
        <div class="modal fade {{ met.categorie }}" id="flipFlop{{ met.id }}" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true" style="z-index: 99999">
            <div class="modal-dialog modal-xl" role="document">
                <div class="modal-content">
                    <div class="modal-header" style="background:#192018;color:white;">
                        <img src="{{ asset('build/products/logoBAE.jpg')  }}" class="rounded-circle" width="80" />
                        <h4 class="modal-title" id="modalLabel">{{ met.libelle }}</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="margin-left: 3px;">
                            <span aria-hidden="true">&times;</span>
