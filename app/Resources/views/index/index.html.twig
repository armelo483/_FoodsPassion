<div class="row met">
    {% for met in mets %}
        {% set panierArray = app.session.get('panier') %}
        <div class="col-lg-4 col-md-6 mb-4  {{ met.categorie }}" data-aos="flip-left" style="margin-bottom: 60px !important;">

            <div class="card h-100 hvr-bounce-in" style="overflow:hidden;" >
                <p class="taille" style="position: absolute;top:4px;display:none;"><span style="color:#da8a13;font-weight: bolder;">Tailles:  </span><span class="badge badge-success">XXL</span> <span class="badge badge-secondary"> <s style="font-weight: bolder;"  size="3">XL</s></span> <span class="badge badge-success">L</span> <span class="badge badge-secondary">M</span>
