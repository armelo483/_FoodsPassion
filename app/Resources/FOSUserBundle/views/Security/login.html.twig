{% extends "FOSUserBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content %}

<!--<ul class="nav navbar-nav navbar-right ml-auto">
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b>Login</b> <span class="caret"></span></a>-->
<ul id="login-dp" class="animated {% if error  %}shake{% else %} fadeInDown{% endif %}" style="width:341px;margin: auto;margin-top: 85px;background: white;-webkit-box-shadow: 9px 4px 70px 6px rgba(0,0,0,0.75);
-moz-box-shadow: 9px 4px 70px 6px rgba(0,0,0,0.75);
box-shadow: 9px 4px 70px 6px rgba(0,0,0,0.75);">
   {% if error  %}
        <span style="color:red;">{{ error.messageKey|trim('.')|trans({}, 'FOSUserBundle') }}</span>
    {% endif %}

    <li>
        <div class="row">
            <div class="col-md-12">
                Login via
                <div class="social-buttons">
                    <!--<a href="{#{{ path('hwi_oauth_service_redirect', {'service': 'facebook' }) }}#}" class="btn btn-fb"><i class="fa fa-facebook"></i> Facebook</a>-->
                    <a href="#" class="btn btn-fb"><i class="fa fa-facebook"></i> Facebook</a>
                    <a href="#" class="btn btn-tw"><i class="fa fa-google"></i> Google</a>
                </div>
                or
                <form class="form" role="form" method="post" action="{{ path("fos_user_security_check")}}" accept-charset="UTF-8" id="login-nav">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    <input type="hidden" name="_target_path" value="{{ app.request.headers.get('referer') }}" />
                    <div class="form-group">
                        <label class="sr-only" for="exampleInputEmail2">Identifiant</label>
                        <input type="text" class="form-control" id="exampleInputEmail2" placeholder="Email address" name="_username" required>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" for="exampleInputPassword2">Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword2" placeholder="Password" name="_password" required>
                        <div class="help-block text-right"><a href="">Forget the password ?</a></div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block" name="_submit" id="_submit">Sign in</button>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> keep me logged-in
                        </label>
                    </div>
                </form>
            </div>
            <div class="bottom text-center">
                Nouveau ? <a href="{{ path('fos_user_registration_register') }}"><b>Rejoignez nous</b></a>
            </div>
        </div>
    </li>
</ul>
{# {{ form_rest(form) }} #}

{% endblock fos_user_content %}

